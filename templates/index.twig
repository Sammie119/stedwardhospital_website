{% block content %}
    <!-- Carousel Start -->
    <div class="container-fluid p-0">
        <div id="header-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                {% set carousel_1_image = entry.carousel_1.one() %}
                <div class="carousel-item active">
                    <img class="w-100" src="{{ carousel_1_image.getUrl('homeCarousel') }}" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 900px;">
                            <h5 class="text-white text-uppercase mb-3 animated slideInDown">{{ entry.carousel_1_Title }}</h5>
                            <h1 class="display-1 text-white mb-md-4 animated zoomIn">{{ entry.carousel_1_Text }}</h1>
                            <a href="about" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">About Us</a>
                            <a href="contact" class="btn btn-secondary py-md-3 px-md-5 animated slideInRight">Contact Us</a>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    {% set carousel_2_image = entry.carousel_2.one() %}
                    <img class="w-100" src="{{ carousel_2_image.getUrl('homeCarousel') }}" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 900px;">
                            <h5 class="text-white text-uppercase mb-3 animated slideInDown">{{ entry.carousel_2_Title }}</h5>
                            <h1 class="display-1 text-white mb-md-4 animated zoomIn">{{ entry.carousel_2_Text }}</h1>
                            <a href="about" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">About Us</a>
                            <a href="" class="btn btn-secondary py-md-3 px-md-5 animated slideInRight">Contact Us</a>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <!-- Carousel End -->


    <!-- Banner Start -->
    <div class="container-fluid banner mb-3">
        <div class="container">
            <div class="row gx-0">
                <div class="row gx-0">
                    {% for banner in entry.banners.all() %}
                        <div class="col-lg-6 wow zoomIn" data-wow-delay="0.1s">
                            <div class="{{ banner.bgColor }} d-flex flex-column p-5" style="height: 300px;">
                                <h3 class="text-white mb-3">{{ banner.bannertitle }}</h3>
                                {{ banner.bannertext }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <!-- Banner Start -->


