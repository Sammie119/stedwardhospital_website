{% extends "_layout/app" %}

{% block content %}
    {% set services = craft.entries.section('services').all() %}
    {% set bgimage = entry.carousel_1.one() %}
    <!-- Hero Start -->
    <div class="container-fluid bg-primary py-5 hero-header mb-5" style="background: linear-gradient(rgba(9, 30, 62, .85), rgba(9, 30, 62, .85)), url({{ bgimage.getUrl('homeCarousel') }}) center center no-repeat;">
        <div class="row py-3">
            <div class="col-12 text-center">
                <h1 class="display-3 text-white animated zoomIn">{{ entry.title }}</h1>
            </div>
        </div>
    </div>
    <!-- Hero End -->

    <!-- Service Start -->
    <div class="container-fluid py-3 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="row g-5 mb-5">
                <div class="col-lg-12">
                    <div class="section-title mb-5">
                        <h5 class="position-relative d-inline-block text-primary text-uppercase">Our Services</h5>
                        <h1 class="display-5 mb-0">{{ entry.service_title }}</h1>
                    </div>
                    <div class="row g-5">
                        {% for service in services %}
                            {% set photo = service.photos.one() %}
                            <div class="col-md-4 service-item wow zoomIn" data-wow-delay="0.6s">
                                <div class="rounded-top overflow-hidden">
                                    <img class="img-fluid" src="{{ photo.getUrl('transformationForHomeServiceImage') }}" alt="{{ photo.title }}">
                                </div>
                                <div class="position-relative bg-light rounded-bottom text-center p-4">
                                    <h5 class="m-0">{{ service.title }}</h5>
                                    <p>{{ service.shortDescription }}</p>
                                    <a href="{{ service.url }}">Read more <i class="fas fa-angle-double-right"></i></a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Service End -->

{% endblock %}