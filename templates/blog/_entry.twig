{% extends "_layout/app" %}

{% block content %}

    <div class="container-fluid py-4 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container" style="text-align: center">
            <div class="row g-5">
                <div class="col-lg-12">
                    <div class="section-title mb-0">
                        <h1 class="display-5 mb-0">{{ entry.title }}</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Carousel Start -->
    {% include "component/slider" with {
        photo: entry.photos.one(),
        photos: entry.photos.all()|slice(1, entry.photos|length)
    } %}
    <!-- Carousel End -->

    <div class="container-fluid py-4 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container" style="max-width: 760px; text-align: center">
            <div class="row g-5">
                <div class="col-lg-12">
                    {{ entry.richText }}

                    <h4 class="text-body fst-italic mb-4">Author: {{ entry.service_title }}</h4>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
