{% extends "_layout/app" %}

{% set pageTitle = entry.title %}

{% block content %}

    {% cache using key "about-us" %}

    <!-- Hero Start -->
    {% set photo = entry.carousel_2.one() %}
    <div class="container-fluid bg-primary py-5 hero-header mb-5" style="background: linear-gradient(rgba(9, 30, 62, .85), rgba(9, 30, 62, .85)), url({{ photo.getUrl('homeCarousel') }}) center center no-repeat;">
        <div class="row py-3">
            <div class="col-12 text-center">
                <h1 class="display-3 text-white animated zoomIn">{{ entry.title }}</h1>
            </div>
        </div>
    </div>
    <!-- Hero End -->

    <!-- About Start -->
    <div class="container-fluid py-3 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="row g-5">
                <div class="col-lg-12 pb-5">
                    <div class="section-title mb-4">
                        <h5 class="position-relative d-inline-block text-primary text-uppercase">About Us</h5>
                        <h1 class="display-5 mb-0">{{ entry.shortDescription }}</h1>
                    </div>
                    {% set image = entry.carousel_1.one() %}
                    <img class="float-end imgshadow p-lg-2" data-wow-delay="0.9s" src="{{ image.getUrl('transformationForHomeAboutImage') }}" width="470px" height="490px">
                    {{ entry.richText }}
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->

    {% endcache %}

{% endblock %}